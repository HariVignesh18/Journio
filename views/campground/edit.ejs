<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Spot</h1>
        <div class="col-6 offset-3">
            <form action="/campground/<%=campground._id%>?_method=PUT" class="validate-form" novalidate
                enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" value="<%=campground.title %>"
                        name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" id="description" name="campground[description]"
                        required><%=campground.description %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" value="<%=campground.location %>" id="location"
                        name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="number" class="form-control" value="<%=campground.price %>" placeholder="0.00"
                            aria-label="Price" name="campground[price]" id="price" required
                            aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Images:</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% })%>
                </div>
                <button class="btn btn-info" type="submit">Update Spot</button>
            </form>
            <a href="/campground/<%= campground._id%>">Back To all destinations</a>
        </div>
    </div>